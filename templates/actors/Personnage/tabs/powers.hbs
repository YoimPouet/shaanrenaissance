<div class="tab powers" data-group="primary" data-tab="powers">
    <div class="pouvoir-compendium">
        <a class="open-compendium" data-compendium="Shaan_Renaissance.pouvoirs"><i class="fa-solid fa-list"></i> {{localize "SR.PouvoirCompendium"}}</a>
    </div>
    <ol class="pouvoirTrihn-list directory-list">
        <li class="item item-container pouvoirRace">
            <div class="pouvoirRace-header">
                <h3 class="item-name">
                    {{localize "SRCreation.pouvoirRace"}}
                </h3>
            </div>
            <div class="pouvoirRace-list">
                <div class="pouvoirRace-content">
                    <span class="pouvoir-name">
                        {{Race.system.pouvoirNom}}
                    </span>
                    <div class="pouvoir-résumé">
                        <i>{{localize "SRLabels.résumé"}} : {{Race.system.pouvoir}}</i>
                    </div>
                </div>
            </div>
        </li>
        <li class="item item-container pouvoirTrihn Esprit">
            <div class="trihn-header">
                <h3 class="item-name">
                    {{localize "SRLabels.pouvoirsEsprit"}}
                </h3>
                {{#ifeq editable true}}
                    <div class="item-controls">
                        <a class="item-control item-create"><i class="fas fa-fw fa-plus" id="Esprit-add"></i></a>
                    </div>
                {{/ifeq}}
            </div>
            <ol class="item-list liste-pouvoir liste-pouvoirEsprit">
                {{#each pouvoirEsprit as |pouvoir|}}
                <li class="item pouvoir" draggable="true" data-item-id="{{pouvoir._id}}">
                <div class="pouvoir-header">
                        <img src="{{pouvoir.img}}" data-edit="img">
                    <span class="pouvoir-name">
                        {{pouvoir.name}}
                    </span>
                    <div class="item-controls">
                        <a class="item-control item-edit"><i class="fas fa-fw fa-edit"></i></a>
                        <a class="item-control item-delete"><i class="fas fa-fw fa-trash"></i></a>
                    </div>
                </div>
                <div class="résumé">
                    <i>{{localize "SRLabels.résumé"}} : {{pouvoir.system.résumé.value}}</i>
