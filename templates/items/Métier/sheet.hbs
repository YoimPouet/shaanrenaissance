<form class="item sheet crb-style metier" autocomplete="off">
    {{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{data.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <div class="metier-details">
        <div class="spés">
            <h3>
                <label class="details-label" for="{{options.id}}-metier-spé1">{{localize "SRCreation.spé"}}</label>
                <span><input name="system.spé" id="{{options.id}}-metier-spé1" type="text" value="{{data.spé}}"spellcheck="false"/>
            </h3>
        </div>
        <div class="metier-resume">
        <h3>
            <label class="details-label" for="{{options.id}}-metier-resume">{{localize "SRCreation.resume"}}</label>
            <textarea name="system.resume" id="{{options.id}}-metier-resume" type="text" value="{{data.resume}}" placeholder="{{data.resume}}" spellcheck="false">{{data.resume}}</textarea>
        </h3>
    </div>
    </div>
</form>