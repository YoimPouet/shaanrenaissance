<form class="item sheet crb-style batiment" autocomplete="off"></form>
{{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{data.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <div class="batiment-details">
        <div class="spés">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-spé1">{{localize "SRCreation.spé"}}</label>
                <span><input name="system.spé1" id="{{options.id}}-batiment-spé1" type="text" value="{{data.spé1}}"spellcheck="false"/> - <input name="system.spé2" id="{{options.id}}-batiment-spé2" type="text" value="{{data.spé2}}"spellcheck="false"/></span>
            </h3>
        </div>
        <div class="batiment-resume">
        <h3>
            <label class="details-label" for="{{options.id}}-batiment-resume">{{localize "SRCreation.resume"}}</label>
            <textarea name="system.resume" id="{{options.id}}-batiment-resume" type="text" value="{{data.resume}}" placeholder="{{data.resume}}" spellcheck="false">{{data.resume}}</textarea>
        </h3>
    </div>
    <div class="batiment-ressource">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-ressource">{{localize "SRCreation.ressource"}}</label>
                <span><input name="system.ressource1" id="{{options.id}}-batiment-ressource" type="text" value="{{data.ressource1}}"spellcheck="false"/> - <input name="system.ressource2" id="{{options.id}}-batiment-ressource2" type="text" value="{{data.ressource2}}"spellcheck="false"/></span>
            </h3>
        </div>
        <div class="batiment-fabrication">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-spé1">{{localize "SRCreation.spé"}}</label>
                <span><input name="system.fabrication1" id="{{options.id}}-batiment-fabrication1" type="text" value="{{data.fabrication1}}"spellcheck="false"/> - <input name="system.fabrication2" id="{{options.id}}-batiment-fabrication2" type="text" value="{{data.fabrication2}}"spellcheck="false"/></span>
            </h3>
        </div>
    </div>
</form>