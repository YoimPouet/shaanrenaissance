<form class="item sheet crb-style batiment" autocomplete="off">
{{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{data.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <div class="batiment-details">
        <div class="spés">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-spécialisations">{{localize "SRCreation.spé"}}</label>
                <input name="system.spécialisations" id="{{options.id}}-batiment-spécialisations" type="text" value="{{data.spécialisations}}"spellcheck="false"/>
            </h3>
        </div>
        <div class="batiment-resume">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-resume">{{localize "SRCreation.resume"}}</label>
                <textarea name="system.description.value" id="{{options.id}}-batiment-resume" type="text" placeholder="{{data.description.value}}" spellcheck="false">{{data.description.value}}</textarea>
            </h3>
        </div>
        <div class="batiment-ressources">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-ressources">{{localize "SR.ressources"}}</label>
                <input name="system.ressources" id="{{options.id}}-batiment-ressources" type="text" value="{{data.ressources}}"spellcheck="false"/>
            </h3>
        </div>
        <div class="batiment-fabrication">
            <h3>
                <label class="details-label" for="{{options.id}}-batiment-fabrication">{{localize "SR.fabrication"}}</label>
                <input name="system.fabrication" id="{{options.id}}-batiment-fabrication" type="text" value="{{data.fabrication}}"spellcheck="false"/>
            </h3>
        </div>
    </div>
</form>