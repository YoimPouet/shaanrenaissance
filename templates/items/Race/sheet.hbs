<form class="item sheet crb-style race" autocomplete="off">
    {{!-- HEADER --}}
    <header class="sheet-header">
        <h2 class="item-name">
            <input name="name" type="text" value="{{item.name}}" placeholder="Nom du item" spellcheck="false" />
        </h2>
        <span class="item-source">
            <input name="system.source.value" type="text" value="{{data.source.value}}" placeholder="Source" spellcheck="false" />
        </span>
    </header>
    <div class="race-image">
        <img src="{{item.img}}" data-edit="img">
    </div>
    <div class="race-details">
        <div class="race-domain">
            <h3>
                <label class="details-label" for="{{options.id}}-race-domain">{{localize "SRCreation.domain"}}</label>
                <input name="system.domain" id="{{options.id}}-race-domain" type="text" value="{{data.domain}}"spellcheck="false"/>
            </h3>
        </div>
        <div class="spés">
            <h3>
                <label class="details-label" for="{{options.id}}-race-spé1">{{localize "SRCreation.spé"}}</label>
                <span><input name="system.spé1" id="{{options.id}}-race-spé1" type="text" value="{{data.spé1}}"spellcheck="false"/> - <input name="system.spé2" id="{{options.id}}-race-spé2" type="text" value="{{data.spé2}}"spellcheck="false"/></span>
            </h3>
        </div>
    </div>
    <div class="race-resume">
        <h3>
            <label class="details-label" for="{{options.id}}-race-resume">{{localize "SRCreation.resume"}}</label>
            <textarea name="system.resume" id="{{options.id}}-race-resume" type="text" value="{{data.resume}}" placeholder="{{data.resume}}" spellcheck="false">{{data.resume}}</textarea>
        </h3>
    </div>
    <div class="race-citation">
        <h3>
            <label class="details-label" for="{{options.id}}-race-citation">{{localize "SRCreation.citation"}}</label>
            <textarea name="system.citation" id="{{options.id}}-race-citation" type="text" value="{{data.citation}}" placeholder="{{data.citation}}" spellcheck="false">{{data.citation}}</textarea>
        </h3>
    </div>
</form>